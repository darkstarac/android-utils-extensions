<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    tools:context=".ui.camera.Camera2Fragment">
    <LinearLayout
        android:id="@+id/fragment_camera2_top_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.camera.view.PreviewView
        android:id="@+id/fragment_camera2_view_finder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_camera2_top_menu"
        app:layout_constraintBottom_toTopOf="@id/fragment_camera2_bottom_menu"/>
    <LinearLayout
        android:id="@+id/fragment_camera2_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:padding="@dimen/card_padding"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_camera2_take_picture_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Button.OutlinedButton.IconOnly.Round"
            app:icon="@drawable/ic_baseline_camera_24"
            app:rippleColor="@color/colorPrimary"
            app:iconSize="50dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>