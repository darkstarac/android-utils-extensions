<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".ui.camera.BitmapEditFragment">
    <it.wazabit.dev.extensions.widget.EditImageView
        android:id="@+id/fragment_bitmap_edit_edit_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="15dp"
        android:layout_margin="32dp"
        app:layout_constraintBottom_toTopOf="@id/fragment_bitmap_edit_menu"/>
    <LinearLayout
        android:id="@+id/fragment_bitmap_edit_menu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/fragment_bitmap_edit_menu_action_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CUT"
            app:icon="@drawable/ic_baseline_settings_overscan_24" />
    </LinearLayout>
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fragment_bitmap_edit_bitmap_preview_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fragment_bitmap_edit_bitmap_preview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"/>
            <Button
                android:id="@+id/fragment_bitmap_edit_bitmap_preview_action_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Close"
                android:layout_gravity="center"/>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>