<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:contentPadding="@dimen/card_padding"
    android:checkable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fragment_file_extensions_internal_storage_files_recyclerview_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="12"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fragment_file_extensions_internal_storage_files_recyclerview_item_mime"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fragment_file_extensions_internal_storage_files_recyclerview_item_size"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:gravity="end"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>